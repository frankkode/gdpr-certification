{
  "name": "certificate-verification-backend",
  "version": "4.0.0",
  "description": "Military-grade certificate verification backend with advanced security",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build complete'",
    "setup": "node -e \"console.log('ðŸ”§ Setting up database...'); require('./db'); setTimeout(() => console.log('âœ… Database setup complete'), 2000);\"",
    "setup:production": "npm run setup && echo 'Production setup complete'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "npm audit && snyk test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "security:scan": "snyk test && npm audit",
    "docs": "jsdoc -d docs server.js db.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "canvas": "^3.1.0",
    "chartjs-node-canvas": "^5.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "html2canvas": "^1.4.1",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "pdf-parse": "^1.1.1",
    "pdf2json": "^3.1.6",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "snyk": "^1.1259.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "certificate",
    "verification",
    "security",
    "cryptography",
    "api"
  ]
}
